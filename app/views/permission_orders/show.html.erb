<div style="padding: 5px">
  <div class="row">
    <div class="col-sm-6"><%= get_index_text('Permissioon Order') %></div>
    <div class="col-sm-6 text-right">

      <% if !current_user.employee %>
        <%= link_to 'Back', "/permission_orders", :class => 'btn btn-success', :style => 'color:white;background-color:#088351 !important' %>
      <% else %>
        <%= link_to 'Back', "/permission_orders/pending_orders", :class => 'btn btn-success', :style => 'color:white;background-color:#088351 !important' %>
      <% end %>

    </div>
  </div>


  <table class="table table-bordered">
    <tr>
      <td>Control room location &nbsp; : <b><%= @permission_order.control_room_location %></b></td>
      <td>Name of the vessel &nbsp; : <b><%= @permission_order.name_of_the_vessel %></b></td>
      <td>Registration Number &nbsp; : <b><%= @permission_order.registration_number %></b></td>
    </tr>
    <tr>
      <td>Owner of the vessel &nbsp; : <b><%= @permission_order.owner_of_the_vessel %></b></td>
      <td>Owner Email &nbsp; : <b><%= @permission_order.owner_email %></b></td>
      <td>Mobile Number &nbsp; : <b><%= @permission_order.mobile_no %></b></td>
    </tr>
    <tr>
      <td>Navigation Routs &nbsp; : <b><%= @permission_order.navigation_route %></b></td>
      <td>Route permission number &nbsp; : <b><%= @permission_order.route_permission_number %></b></td>
      <td>Boat Capacity &nbsp; : <b><%= @permission_order.passenger_capacity %></b></td>
    </tr>
    <tr>
      <td>Captain Name &nbsp; : <b><%= @permission_order.captain_name %></b></td>
      <td>Captain License No &nbsp; : <b><%= @permission_order.captain_license_no %></b></td>
      <td>File No &nbsp; : <b><%= @permission_order.file_no %></b></td>
    </tr>
    <tr>
      <td>Appllied Date &nbsp; : <b><%= @permission_order.appllied_date %></b></td>
      <td>Approved At &nbsp; : <b><%= @permission_order.approved_at %></b></td>
      <td>Approved By &nbsp; : <b><%= @permission_order.approved_by %></b></td>
    </tr>
    <tr>
      <td>License registration certificate&nbsp; :
        <b><a href="<%= @permission_order.license_registration_certificate %>" target="_blank"> View</a></b></td>
      <td>Routes permisiion &nbsp; :
        <a href="<%= @permission_order.license_registration_certificate %>" target="_blank"> View</a></td>
      <td>Captain License &nbsp; :
        <a href="<%= @permission_order.captain_license %>" target="_blank"> View</a></td>
    </tr>

    <tr>
      <td>Noc certificate&nbsp; : <b><a href="<%= @permission_order.noc_certificate %>" target="_blank"> View</a></b>
      </td>
      <td></td>
      <td>Application Status&nbsp; : <b><%= @permission_order.application_status %></b></td>
    </tr>

  </table>


  <% if current_user.user_role.eql?("HO") && @permission_order.application_status.eql?('Created') %>
    <div class="row">
      <div class="col-sm-8"></div>
      <div class="col-sm-4">
        <div class="col-sm-12" style="padding: 10px">
          <div class="col-sm-6">
            <a href="/permission_orders/accept_orders?id=<%= @permission_order.id %>" class="btn btn-success" style="width: 100%;min-height: 35px;font-weight: bold;font-size: 16px;color: white">
              Accept</a></div>
          <div class="col-sm-6">
            <a href="/permission_orders/reject_orders?id=<%= @permission_order.id %>" class="btn btn-danger" style="width: 100%;min-height: 35px;font-weight: bold;font-size: 16px;color: white">
              Reject </a></div>
        </div>
      </div>
    </div>
  <% end %>




</div>






