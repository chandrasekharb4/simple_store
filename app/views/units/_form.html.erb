<%= form_for(@unit) do |f| %>
  <% if @unit.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@unit.errors.count, "error") %> prohibited this unit from being saved:</h2>

      <ul>
      <% @unit.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>






<div class="row">
  <div class="col-sm-6">
    <div class="form-group">
      <%= f.label :name, :class => 'label-tag-style', :style => "text-transform: capitalize;color:black" %><br/>
      <%= f.text_field :name, :class => 'form-control', :placeholder => 'Name ', :required => true %>
    </div>
    <div class="form-group">
      <%= f.label :code, :class => 'label-tag-style', :style => "text-transform: capitalize;color:black" %><br/>
      <%= f.text_field :code, :class => 'form-control', :placeholder => 'Code ', :required => true %>
    </div>
    <div class="form-group">
      <%= f.label :division_id , :class => 'label-tag-style', :style => "text-transform: capitalize;color:black" %><br/>
      <%= f.select(:division_id, options_for_select(Division.where('active=?', true).collect {|u| [u.name, u.id]}, @unit.division_id), {:prompt => 'Select Division'}, :required => "required", :class => 'form-control livesearch',) %>
    </div>
    <div class="form-group">
      <%= f.check_box :active %> &nbsp;&nbsp; <%= f.label :active, :class => 'label-tag-style', :style => "text-transform: capitalize;color:black" %>
      <br/>
    </div>
    <div class="actions">
      <%= f.submit(:class => 'btn btn-success btn-md', :style => "background-color:#088351") %>
    </div>
  </div>
</div>
<% end %>
