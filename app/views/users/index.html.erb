<div style="padding: 5px">
  <div class="row">
    <div class="col-sm-6"><%= get_index_text('users') %></div>
    <div class="col-sm-6 text-right">
     <a href="/users/create_admin" class="btn btn-success"  :style = 'color:white;background-color:#088351 !important'> New Controll Room  Admin</a>
    </div>
  </div>
  <table class="table table-bordered">
    <tr class="tr_style">
      <th>Name</th>
      <th>Mobile no</th>
      <th>Email</th>
      <th>Super admin</th>
      <th>Admin</th>
      <th>Employee - unit </th>
      <th>Employee code</th>
      <th>User role</th>
      <th>Control room</th>
      <th></th>
      <th></th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.mobile_no %></td>
        <td><%= user.email %></td>
        <td><%= user.super_admin %></td>
        <td><%= user.admin %></td>
        <td><%= user.employee %> <%= user.unit_user %></td>
        <td><%= user.employee_code %></td>
        <td><%= user.user_role %></td>
        <td><%= ControlPoint.find_by_id(user.control_room_id).try(:name) %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>
  <br/>

</div>
