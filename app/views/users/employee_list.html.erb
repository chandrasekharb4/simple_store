<div style="padding: 5px">
  <div class="row">
    <div class="col-sm-6"><%= get_index_text('Employee List') %></div>
    <div class="col-sm-6 text-right">
      <a href="/users/create_employee" class="btn btn-success"  :style = 'color:white;background-color:#088351 !important'> New Employee</a>
    </div>
  </div>
  <table class="table table-bordered">
    <tr class="tr_style">
      <th>Name</th>
      <th>Mobile no</th>
      <th>Email</th>
      <th>Employee code</th>
      <th>User role</th>
      <th></th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.mobile_no %></td>
        <td><%= user.email %></td>
        <td><%= user.employee_code %></td>
        <td><%= user.user_role %></td>
        <td><%= link_to 'Edit', "/users/create_employee?user_id=#{user.id}" %></td>
      </tr>
    <% end %>
  </table>
  <br/>

</div>
