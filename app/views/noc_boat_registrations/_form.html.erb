<%= form_for(@noc_boat_registration, multipart: true) do |f|  %>
  <% if @noc_boat_registration.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@noc_boat_registration.errors.count, "error") %> prohibited this noc_boat_registration from
        being saved:</h2>

      <ul>
        <% @noc_boat_registration.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div style="padding: 30px 20px;background-color: white !important; ">

    <div class="row">
      <div class="col-sm-4">
        <div class="form-group">
          <%= f.label :owner_name, :class => 'label-tag-style', :style => "text-transform: capitalize;color:black;font-weight:600;font-size:13px" %>
          <br/>
          <%= f.text_field :owner_name, :class => 'form-control', :placeholder => 'Owner Name ', :required => true %>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="form-group">
          <%= f.label :agency_name, :class => 'label-tag-style', :style => "text-transform: capitalize;color:black;font-weight:600;font-size:13px" %>
          <br/>
          <%= f.text_field :agency_name, :class => 'form-control', :placeholder => 'Agency Name ', :required => true %>
        </div>
      </div>

      <div class="col-sm-4">
        <div class="form-group">
          <%= f.label :owner_email, :class => 'label-tag-style', :style => "text-transform: capitalize;color:black;font-weight:600;font-size:13px" %>
          <br/>
          <%= f.text_field :owner_email, :class => 'form-control', :placeholder => 'Email ', :required => true %>
        </div>
      </div>

    </div>


    <div class="row">
      <div class="col-sm-4">
        <div class="form-group">
          <%= f.label :mobile_number, :class => 'label-tag-style', :style => "text-transform: capitalize;color:black;font-weight:600;font-size:13px" %>
          <br/>
          <%= f.text_field :mobile_number, :class => 'form-control', :placeholder => 'Owner Mobile Number ', :required => true %>
        </div>
      </div>
      <div class="col-sm-8">
        <div class="form-group">
          <%= f.label :adress, :class => 'label-tag-style', :style => "text-transform: capitalize;color:black;font-weight:600;font-size:13px" %>
          <br/>
          <%= f.text_field :adress, :class => 'form-control', :placeholder => 'Adress', :required => true %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-4">
        <div class="form-group">
          <%= f.label :boat_name, :class => 'label-tag-style', :style => "text-transform: capitalize;color:black;font-weight:600;font-size:13px" %>
          <br/>
          <%= f.text_field :boat_name, :class => 'form-control', :placeholder => 'Boat Name', :required => true %>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="form-group">
          <%= f.label :boat_type, :class => 'label-tag-style', :style => "text-transform: capitalize;color:black;font-weight:600;font-size:13px" %>
          <br/>
          <%= f.select(:boat_type, options_for_select(BoatType.where('active=?', true).collect {|u| [u.name, u.name]}, @noc_boat_registration.boat_type), {:prompt => 'Select Boat Type'}, :required => "required", :class => 'form-control livesearch',) %>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="form-group">
          <%= f.label :engine_type, :class => 'label-tag-style', :style => "text-transform: capitalize;color:black;font-weight:600;font-size:13px" %>
          <br/>
          <%= f.select(:engine_type, options_for_select(EngineType.where('active=?', true).collect {|u| [u.name, u.name]}, @noc_boat_registration.engine_type), {:prompt => 'Select Engine Type'}, :required => "required", :class => 'form-control livesearch',) %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <%= f.label :manufacturing_certificate_number, :class => 'label-tag-style', :style => "text-transform: capitalize;color:black;font-weight:600;font-size:13px" %>
          <br/>
          <%= f.text_field :manufacturing_certificate_number, :class => 'form-control', :placeholder => 'Manufacturing Certificate Number', :required => true %>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <%= f.label :manufacturing_date, :class => 'label-tag-style', :style => "text-transform: capitalize;color:black;font-weight:600;font-size:13px" %>
          <br/>
          <%= f.text_field :manufacturing_date, :class => 'form-control datepicker', :placeholder => 'Manufacturing Date', :required => true %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <%= f.label :proposed_location, :class => 'label-tag-style', :style => "text-transform: capitalize;color:black;font-weight:600;font-size:13px" %>
          <br/>
          <%= f.select(:proposed_location, options_for_select(ControlPoint.all.collect {|u| [u.name, u.name]}, @noc_boat_registration.proposed_location), {:prompt => 'Select Proposed Location'}, :required => "required", :class => 'form-control livesearch',) %>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <%= f.label :proposed_use, :class => 'label-tag-style', :style => "text-transform: capitalize;color:black;font-weight:600;font-size:13px" %>
          <br/>
          <%= f.select(:proposed_use, options_for_select(ProposedUse.where('active=?', true).collect {|u| [u.name, u.name]}, @noc_boat_registration.proposed_use), {:prompt => 'Select Proposed use'}, :required => "required", :class => 'form-control livesearch',) %>
        </div>
      </div>
    </div>
  </div>

  <div style="background-image: linear-gradient(141deg, #044f81 0%, #1fc8db 51%, #044f81 75%);padding: 10px;text-align: left;font-weight: bold;font-size: 14px;color: white">Documents</div>
  <br/>
  <div style="padding: 10px 20px;background-color: white !important; ">
    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <%= f.label :aadharCard, :class => 'label-tag-style', :style => "text-transform: capitalize;color:black;font-weight:600;font-size:13px" %>
          <br/>
          <%= f.file_field :aadharCard, :accept => ".pdf" %>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <%= f.label :manufacturing_certificate, :class => 'label-tag-style', :style => "text-transform: capitalize;color:black;font-weight:600;font-size:13px" %>
          <br/>
          <%= f.file_field :manufacturing_certificate, :accept => ".pdf" %>
        </div>
      </div>
    </div>


    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :application_status, :value => "Created" %>
    <%= f.hidden_field :applied_date, :value => Date.today %>
    <%= f.hidden_field :expire_date, :value => Date.today %>
    <%= f.hidden_field :tnr_no, :value => @payment.tnr_no %>
    <%= f.hidden_field :paid_amount, :value => @payment.amount %>



    <br/>

    <div class="row">
      <%= f.submit("SUBMIT", :class => 'btn btn-primary btn-md btn-lg btn-block', :style => "background-color:#007bff;min-height:50px;font-weight:bold;font-size:16px") %>
    </div>
  </div>
<% end %>


