<div style="padding: 5px">
  <div class="row">
    <div class="col-sm-6"><%= get_index_text('Boat Types') %></div>
    <div class="col-sm-6 text-right"><%= link_to 'New Boat type', new_boat_type_path, :class => 'btn btn-success', :style => 'color:white;background-color:#088351 !important' %></div>
  </div>
  <table class="table table-bordered">
    <tr class="tr_style">
      <th>Name</th>
      <th>Code</th>
      <th>Active</th>
      <th></th>
      <th></th>
    </tr>

    <% @boat_types.each do |boat_type| %>
      <tr>
        <td><%= boat_type.name %></td>
        <td><%= boat_type.code %></td>
        <td><%= boat_type.active %></td>
        <td><%= link_to 'Edit', edit_boat_type_path(boat_type) %></td>
        <td><%= link_to 'Destroy', boat_type, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
  </table>

  <br/>

</div>
