<div style="padding: 5px">
  <div class="row">
    <div class="col-sm-6"><%= get_index_text('Engine Types') %></div>
    <div class="col-sm-6 text-right"><%= link_to 'New Engine type', new_engine_type_path, :class => 'btn btn-success', :style => 'color:white;background-color:#088351 !important' %></div>
  </div>
  <table class="table table-bordered">
    <tr class="tr_style">
      <th>Name</th>
      <th>Code</th>
      <th>Active</th>
      <th></th>
      <th></th>
    </tr>
    <% @engine_types.each do |engine_type| %>
      <tr>
        <td><%= engine_type.name %></td>
        <td><%= engine_type.code %></td>
        <td><%= engine_type.active %></td>
        <td><%= link_to 'Edit', edit_engine_type_path(engine_type) %></td>
        <td><%= link_to 'Destroy', engine_type, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
  </table>
  <br/>
</div>
